{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
            },
            "preLaunchTask": "Build UI and Resource"
        },
        {
            "name": "Main - Skip Intro",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "HIDE_INTRO": "true",
            },
            "preLaunchTask": "Build UI and Resource"
        },
        {
            "name": "Main - Skip Intro - no compile",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "HIDE_INTRO": "true",
            },
        },
        {
            "name": "Main - Console",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "args": ["--console"],
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "preLaunchTask": "Build UI and Resource"
        },
        {
            "name": "DebugWindow",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/widgets/debug_window.py",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
        }
    ]
}